<Application x:Class="WpfApp1olenuk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp1olenuk"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="numbercolor" Color="Gray"/>
        <SolidColorBrush x:Key="operatorsColor" Color="Orange"/>
        <SolidColorBrush x:Key="foregraundColor" Color="White"/>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>

        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="30"/>
        </Style>
    </Application.Resources>
</Application>
